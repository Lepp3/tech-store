
    <section class="details-hero">
        <div class="container">
            <h2>Laptop Details</h2>
        </div>
    </section>

    <section class="details-content">
        <div class="container">
            <div class="product-details">
                <div class="product-image">
                    <img src="{{deviceData.imageUrl}}" alt="Laptop">
                </div>
                <div class="product-info">
                    <h3>Brand: {{deviceData.brand}}</h3>
                    <p><strong>Model:</strong> {{deviceData.model}}</p>
                    <p><strong>Hard Disk:</strong> {{deviceData.hardDisk}}</p>
                    <p><strong>Screen Size:</strong> {{deviceData.screenSize}}</p>
                    <p><strong>RAM:</strong> {{deviceData.ram}}</p>
                    <p><strong>Operating System:</strong> {{deviceData.operationSys}}</p>
                    <p><strong>CPU:</strong> {{deviceData.cpu}}</p>
                    <p><strong>GPU:</strong> {{deviceData.gpu}}</p>
                    <p><strong>Price:</strong> ${{deviceData.price}}</p>
                    <p><strong>Color:</strong> {{deviceData.color}}</p>
                    <p><strong>Weight:</strong> {{deviceData.weight}}</p>
                </div>
            </div>
            {{#if user}}
            <div class="product-actions">
                {{#if isOwner}}
                <button class="btn edit"><a href="/device/{{deviceData._id}}/edit">Edit</a></button>
                <button class="btn delete"><a href="/device/{{deviceData._id}}/delete">Delete</a></button>
                {{else}}
                {{#if hasPreferred}}
                 <p class="prefer-message">You've already preferred this device</p>
                {{else}}
                <button class="btn prefer"><a href="/device/{{deviceData._id}}/prefer">Prefer</a></button>
                 {{/if}}
                {{/if}}
            </div>
            {{/if}}
        </div>
    </section>
